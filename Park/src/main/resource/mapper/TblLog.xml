<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.park.mapper.LogMapper">


<!--增加日志信息-->
    <insert id="addLog" parameterType="com.park.entity.TblLog" keyProperty="userid">
        insert into tblog(uname,module,incident,acttime,ip,description, rsponseDate)
        values(#{uname},#{module},#{incident},#{acttime},#{ip},#{description},#{rsponseDate})
    </insert>

<!--查询日志列表，获取数据-->
    <select id="findLogAll" parameterType="com.park.entity.TblUserList" resultType="com.park.entity.TblLog">
        select * from tblog where 1=1

        <if test="null!=username and ''!=username">
            and uname like "%"#{username}"%"
        </if>
        <if test="null!=starttime and '' neq starttime ">
            and acttime &gt;= #{starttime}
        </if>

        <if test="null neq endtime and '' neq endtime">
            and acttime &lt;= #{endtime}
        </if>

        LIMIT #{page},#{limit}
    </select>


<!--获取日志列表总条数-->
    <select id="getLogCount" parameterType="com.park.entity.TblUserList" resultType="java.lang.Integer">
        select COUNT(*) from tblog where 1=1
        <if test="null!=username and ''!=username">
            and uname like "%"#{username}"%"
        </if>
        <if test="null!=starttime and '' neq starttime ">
            and acttime &gt;= #{starttime}
        </if>
        <if test="null neq endtime and '' neq endtime">
            and acttime &lt;= #{endtime}
        </if>


    </select>

</mapper>